<div class="main-container container-fluid">
    <div class="main-content">
      <div class="row-fluid">
        <div class="span12">
          <div class="login-container">
            <div class="row-fluid">
              <div class="center">
                <h1>
                  <i class="icon-leaf green"></i>
                  <span class="red">Tucker</span>
                  <span class="white">Box</span>
                </h1>
                <h4 class="blue">&copy; TuckerBox</h4>
              </div>
            </div>

            <div class="space-6"></div>

            <div class="row-fluid">
              <div class="position-relative">
                <div id="login-box" class="login-box visible widget-box no-border">
                  <div class="widget-body">
                    <div class="widget-main">
                      <h4 class="header blue lighter bigger">
                        <i class="icon-coffee green"></i>
                        Please Enter Your Information
                      </h4>

                      <div class="space-6"></div>

                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <fieldset>
                          <label>
                            <span class="block input-icon input-icon-right">
                              <%= f.email_field :email, {:placeholder => "Username / Email", :class => "span12", :required => "required"} %>
                              <i class="icon-user"></i>
                            </span>
                          </label>

                          <label>
                            <span class="block input-icon input-icon-right">
                              <%= f.password_field :password, {:placeholder => "Password", :class => "span12", :required => "required"} %>
                              <i class="icon-lock"></i>
                            </span>
                          </label>
                          <div class="space"></div>

                          <% if devise_mapping.rememberable? -%>
                            <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                            </div>
                            <% end -%>

                          <div class="clearfix">
                            <div class="actions">
                              <%= f.submit "Log in", {:class => "width-35 pull-right btn btn-small btn-primary"} %>
                            </div>
                          </div>

                          <div class="space-4"></div>
                        </fieldset>
                      <% end %>
                      <%= render "devise/shared/links" %>
                    </div><!--/widget-main-->
                  </div><!--/widget-body-->
                </div><!--/login-box-->
              </div><!--/position-relative-->
            </div>
          </div>
        </div><!--/.span-->
      </div><!--/.row-fluid-->
    </div>
  </div><!--/.main-container-->


