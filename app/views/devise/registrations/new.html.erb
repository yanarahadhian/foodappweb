 <div class="main-container container-fluid">
    <div class="main-content">
      <div class="row-fluid">
        <div class="span12">
          <div class="login-container">
            <div class="row-fluid">
              <div class="center">
                <h1>
                  <i class="icon-leaf green"></i>
                  <span class="red">Joey</span>
                  <span class="white">Food Apps</span>
                </h1>
                <h4 class="blue">&copy; Joey Food Apps</h4>
              </div>
            </div>

            <div class="space-6"></div>

            <div class="row-fluid">
              <div class="position-relative">
                <div id="signup-box" class="signup-box visible widget-box no-border">
                  <div class="widget-body">
                    <div class="widget-main">
                      <h4 class="header green lighter bigger">
                        <i class="icon-group blue"></i>
                        New Admin Registration
                      </h4>

                      <div class="space-6"></div>
                      <p> Enter your details to begin: </p>

                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>
                        <fieldset>
                          <label>
                            <span class="block input-icon input-icon-right">
                              <%= f.email_field :email, {:placeholder => "Email", :class => "span12", :required => "required"} %>
                              <i class="icon-envelope"></i>
                            </span>
                          </label>

                          <label>
                            <span class="block input-icon input-icon-right">
                              <%= f.text_field :full_name, {:placeholder => "Full Name", :class => "span12", :required => "required"} %>
                              <i class="icon-user"></i>
                            </span>
                          </label>

                          <label>
                            <span class="block input-icon input-icon-right">
                              <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                              <% end %><br />
                              <%= f.password_field :password, {:placeholder => "Password", :class => "span12", :required => "required"} %>
                              <i class="icon-lock"></i>
                            </span>
                          </label>

                          <div class="space-24"></div>

                          <div class="clearfix">
                            <div class="actions">
                              <%= f.submit "Register", {:class => "width-65 pull-right btn btn-small btn-success"} %>
                            </div>
                          </div>
                        </fieldset>
                      <% end %>
                      <%= render "devise/shared/links" %>admin

                    </div>
                  </div><!--/widget-body-->
                </div><!--/signup-box-->
              </div><!--/position-relative-->
            </div>
          </div>
        </div><!--/.span-->
      </div><!--/.row-fluid-->
    </div>
  </div><!--/.main-container-->


