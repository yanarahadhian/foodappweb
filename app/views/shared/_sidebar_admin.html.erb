<%= content_for(:extra_js) do %>
	<script type="text/javascript">
		$(document).on("click", ".sidebar-collapse", function(){
			var res = $(".sidebar ul").hasClass("slide-sidebar")
			if (!res) {
				$('#sidebar-collapse i').prop('title', 'Show Sidebar');
			}else{
				$('#sidebar-collapse i').prop('title', 'Hide Sidebar');
			}
			res ? $(".main-content").removeClass("slide") : $(".main-content").addClass("slide");
			res ? $(".sidebar ul").removeClass("slide-sidebar") : $(".sidebar ul").addClass("slide-sidebar");
			res ? $(".sidebar-collapse i").addClass("fa-chevron-circle-left").removeClass("fa-chevron-circle-right") : $(".sidebar-collapse i").addClass("fa-chevron-circle-right").removeClass("fa-chevron-circle-left")
		})
	</script>
