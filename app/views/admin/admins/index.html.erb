<div class="page-content">
	<div class="page-header position-relative">
		<h1>
			Dashboard
			<small>
				<i class="fa fa-angle-double-right"></i>
				overview &amp; stats
			</small>
		</h1>
	</div><!--/.page-header-->

	<div class="row-fluid">
		<div class="span12">
			<!--PAGE CONTENT BEGINS-->
			<div class="alert alert-block alert-success">
				<button type="button" class="close" data-dismiss="alert">
					<i class="fa fa-remove"></i>
				</button>

				<i class="fa fa-ok green"></i>

				Welcome to
				<strong class="green">
					TuckerBox Admin Dashboard
					<small>(v1.0.0)</small>
				</strong>
				.....
			</div>

			<div class="row-fluid">
        <h3>User Count <%= @users.count %>   |   Listing Count <%= @items.count %></h3>
        <div class="hr hr32 hr-dotted"></div>
        <div class="span4">
              <div class="widget-main">
                <div id="piechart-placeholder"></div>
              </div><!--/widget-main-->
        </div><!--/span-->

				<div class="span5">
					<div class="widget-box transparent">
						<div class="widget-header widget-header-flat">
							<h4 class="lighter">
								<i class="fa fa-star orange"></i>
								Orders
							</h4>
						</div>

						<div class="widget-body">
							<div class="widget-main no-padding">
								<table class="table table-bordered table-striped">
									<thead>
										<tr>
											<th>
												<i class="fa fa-caret-right blue"></i>
												Status
											</th>

											<th>
												<i class="fa fa-caret-right blue"></i>
												Total
											</th>
										</tr>
									</thead>

									<tbody>
										<tr>
											<td>Pending</td>

											<td>
												<b class="green">
                          <%= if @pending_order.nil? || @pending_order == 0
                            0
                           else @pending_order.count
                          end%>
                        </b>
											</td>
										</tr>

										<tr>
											<td>Completed</td>

											<td>
												<b class="green">
                          <%= if @completed_order.nil? || @completed_order == 0
                          0
                              else @completed_order.count
                            end
                          %>
                        </b>
											</td>
										</tr>

										<tr>
											<td>Confirmed</td>

											<td>
												<b class="green">
                        <%= if @confirmed_order.nil? || @confirmed_order == 0
                          0
                        else @confirmed_order.count
                        end
                         %></b>
											</td>
										</tr>

										<tr>
											<td>Shipped</td>

											<td>
												<b class="green">
                        <%=                             
                        if  @shipped_order.nil? ||  @shipped_order == 0
                          0
                        else @shipped_order.count
                        end %></b>
											</td>
										</tr>

										<tr>
											<td>Canceled</td>

											<td>
												<b class="green">
                        <%= if @canceled_order.nil? || @canceled_order == 0
                          0
                        else @canceled_order.count
                        end
                        %></b>
											</td>
										</tr>
									</tbody>
								</table>
							</div><!--/widget-main-->
						</div><!--/widget-body-->
					</div><!--/widget-box-->
				</div>
			</div>

      <div class="row-fluid">
        <div class="span7">
          <div class="widget-box transparent">
            <div class="widget-header widget-header-flat">
              <h4 class="lighter">
                <i class="fa fa-usd"></i>
                This Month Revenue
              </h4>
            </div>

            <div class="widget-body">
              <div class="widget-main padding-4">
                <h5>$ <%= 
                    @spendingtotal = Payment.all.where(status: "Completed").sum('total')
                      %></h5>
              </div><!--/widget-main-->
            </div><!--/widget-body-->
          </div><!--/widget-box-->
        </div>
      </div>
			<!--PAGE CONTENT ENDS-->
		</div><!--/.span-->
	</div><!--/.row-fluid-->
</div><!--/.page-content-->

