<div class="page-content">
	<div class="page-header position-relative">
		<h1>
			Listing Item
			<small>
				<i class="fa fa-double-angle-right"></i>
				<%= @item.name %>
			</small>
		</h1>
	</div><!--/.page-header-->
	<div class="row-fluid">
		<div class="span12">
			<!--PAGE CONTENT BEGINS-->
			<div id="user-profile-3" class="user-profile row-fluid">
				<div class="offset1 span10">
					<div class="form-horizontal">
						<div class="tabbable">
							<ul class="nav nav-tabs padding-16">
								<li class="active">
									<a data-toggle="tab" href="#edit-basic">
										<i class="green fa fa-edit bigger-125"></i>
										Basic Info
									</a>
								</li>
							</ul>
			        <div class="tab-content profile-edit-tab-content">
							  <div id="edit-basic" class="tab-pane in active">
									<h4 class="header blue bolder smaller">General</h4>
									<div class="row-fluid">
										<div class="span8">
										  <div class="control-group">
											  <%= label_tag :name, "Name:", class: "control-label pull-left" %>
											  <div class="controls">
												  <div class="form-control none-border"><%= @item.name%></div>
										    </div>
									    </div>
										</div>
										<div class="vspace"></div>
									</div>
									<div class="row-fluid">									
										<% 4.times do |t| %>
											<div class="span3">
												<div class="fileinput fileinput-new" data-provides="fileinput">
												  <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
												  	<%= image_tag edit_item_image_user(@item, t)[0] %>
												  </div>
												</div>
											</div>
										<% end %>
									</div>
						      <div class="space"></div>
						      <h4 class="header blue bolder smaller">Detail</h4>
									<div class="control-group">
									  <%= label_tag :price, "Price:", class: "control-label pull-left" %>
									  <div class="controls">
									    <div class="form-control none-border"><%= @item.price %></div>
									  </div>
									</div>
									<div class="control-group">
									  <%= label_tag :description, "Description:", class: "control-label pull-left" %>
									  <div class="controls">
									  	<div class="form-control none-border" style="height: auto;"><%= @item.description %></div>
									  </div>
									</div>
				  			</div>
				      </div>
				    </div>
					</div>
				</div><!--/span-->
			</div><!--/user-profile-->
			<!--PAGE CONTENT ENDS-->
		</div><!--/.span-->
	</div><!--/.row-fluid-->
</div><!--/.page-content-->
<%= content_for(:extra_js) do %>
	<!--basic scripts-->


	<!--[if !IE]>-->

	<script type="text/javascript">
		window.jQuery || document.write("<script src='/assets/admin/jquery-2.0.3.min.js'>"+"<"+"/script>");
	</script>

	<!--<![endif]-->


	<script type="text/javascript">
		if("ontouchend" in document) document.write("<script src='/assets/admin/jquery.mobile.custom.min.js'>"+"<"+"/script>");		
	</script>
<% end %>