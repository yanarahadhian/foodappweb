<section id="detail-item" class="food-detail-content">
  <div class="container">
    <div class="col-md-12 col-sm-12 col-xs-12 margin-top-md">
      <div class="food-image col-md-6 col-sm-12 col-xs-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
			    <!-- Wrapper for slides -->
			    <div class="carousel-inner" role="listbox">	      
		        <% if @item.images.present? %>
		        	<% @item.images.each_with_index do |image, index| %>
							  <div class="item
							  	<% if index == 0 %>
							  		active
							  	<% end %>
							  ">
									<%= image_tag image.storage.thumb.url%>
							  </div>
							<% end %>
						<% else %>
							<%= image_tag 'default-food.jpg' %>
						<% end %>	      
			    </div>

			    <!-- Left and right controls -->
			    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
			      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			      <span class="sr-only">Previous</span>
			    </a>
			    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
			      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			      <span class="sr-only">Next</span>
			    </a>
			  </div>
      </div>

      <div class="profile-section col-md-6 col-sm-12 col-xs-12">
        <div class="image-body">
          <%= image_tag avatar_user(@user) %>
        </div>
        <div class="profile-name">
          <h3><strong><%= @user.full_name.titleize %></strong></h3>
          <h5><%= @user.city.titleize %>, <%= @user.country.titleize %></h5>
        </div>
        <div class="item-list">
          <h3 class="red"><strong><%= @item.name %></strong></h3><p class="price inline-block"><strong><%= @item.price %></strong></p><p class="listed inline-block pull-right"><%= time_ago_in_words(@item.created_at) %> ago</p>
          <p><%= @item.description %></p>
          <i class="glyphicon glyphicon-heart red"></i><p class="red like-count"><%= @item.like_count %> likes</p><br>
          <% @item.comments.each do |comments| %>		
	          <div class="comments">
	            <a class="red commentator" href="<%= "#{WEB_URL}/#{comments.user.permalink}"%>"><strong><%= comments.user.full_name %></strong></a>
	            <p><%= comments.body %></p><br>
	          </div>
	        <% end %>
        </div>
         <!-- <div class="add-comment">
           <input type="text" class="form-control" placeholder="Comment">
         </div> -->
      </div>

    </div>
  </div>
</section>