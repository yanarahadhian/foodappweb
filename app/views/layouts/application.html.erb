  </head>
  <body>
    <div class="warp">
      <%= render  "shared/header" %>
      <%= yield %>
    </div>
    <%= render  "shared/footer" %>
    <%= javascript_include_tag "application" %>
    <%= yield(:extra_js) %>
  </body>
</html>
